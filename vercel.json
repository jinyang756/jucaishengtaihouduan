{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/ws",
      "dest": "api/index.py",
      "methods": ["GET"],
      "headers": {
        "Upgrade": "websocket",
        "Connection": "Upgrade"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "DATABASE_URL": "$DATABASE_URL",
    "SECRET_KEY": "$SECRET_KEY",
    "FRONTEND_URL": "$FRONTEND_URL"
  }
}